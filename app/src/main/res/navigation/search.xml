<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    app:startDestination="@id/searchQueryFragment">

    <fragment
        android:id="@+id/searchQueryFragment"
        android:name="com.cosmos.unreddit.ui.searchquery.SearchQueryFragment"
        tools:layout="@layout/fragment_search_query">

        <action
            android:id="@+id/openSearch"
            app:destination="@id/searchFragment"/>
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.cosmos.unreddit.ui.search.SearchFragment"
        tools:layout="@layout/fragment_search">
    </fragment>

</navigation>